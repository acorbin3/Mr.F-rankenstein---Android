<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.backflippedstudios.mrfrankenstein.Main_Activity">

    <TabHost
        android:id="@+id/tab_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/lp_wallpaper"
                    android:orientation="vertical"
                    android:saveEnabled="false">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_row="3"
                            android:text="TextView"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_row="0"
                            android:text="Button" />

                        <CheckBox
                            android:id="@+id/cb_tab4"
                            android:layout_width="127dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="1"
                            android:text="Persistant CheckBox"
                            android:textColor="@android:color/white" />

                        <RadioButton
                            android:id="@+id/radioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_row="2"
                            android:text="RadioButton" />

                        <EditText
                            android:id="@+id/editText_notification"
                            android:layout_width="195dp"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="4"
                            android:ems="10"
                            android:inputType="textPersonName"
                            android:text="Notification Text"
                            android:textColor="@android:color/white" />

                        <EditText
                            android:id="@+id/editTextDelayTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:inputType="number"
                            android:text="Delay Time in ms"
                            android:textColor="@android:color/white" />

                        <Button
                            android:id="@+id/buttonNotification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="5"
                            android:text="Create Notification" />

                        <Button
                            android:id="@+id/b_takeoff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="6"
                            android:text="Aircraft takeoff" />

                        <Button
                            android:id="@+id/b_heliHover"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_row="6"
                            android:text="Heli Hover" />

                        <Button
                            android:id="@+id/b_stop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="0"
                            android:layout_row="7"
                            android:text="Stop" />

                    </GridLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tab1background"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="292dp"
                        android:layout_height="153dp"
                        app:srcCompat="@drawable/lifebuzz_008cd283abe9148c83ac39b934287009_limit_2000" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView 5 Tab 1"
                        android:textColor="@android:color/white"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="259dp"
                        android:layout_height="34dp"
                        android:text="TextView 2 Tab 1"
                        android:textAllCaps="false"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tab3background"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textViewListTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="List of GE Engines"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <ListView
                        android:id="@+id/list1"
                        android:layout_width="match_parent"
                        android:layout_height="232dp"
                        android:layout_weight="0.80" />

                    <EditText
                        android:id="@+id/editTextListEntry"
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="New Engine to add"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="102dp"
                        android:layout_weight="0.19"
                        app:srcCompat="@drawable/insert" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tab2background"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="327dp"
                        android:layout_height="176dp"
                        android:layout_weight="0.87"
                        android:text="TextView3 Tab2"
                        android:textColor="@android:color/white"
                        android:textSize="36sp" />

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="78dp"
                        android:background="@android:color/darker_gray"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Enter Text to change TV3"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="9dp"
                        android:text="Change Text" />

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>

</android.support.design.widget.CoordinatorLayout>
